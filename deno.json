{
	"compilerOptions": {
		"lib": [
			"deno.ns",
			"deno.unstable",
			"dom"
		],
		"strict": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"noImplicitReturns": true
	},
	"tasks": {
		"start": "deno run --allow-net --allow-read=. --allow-write=. --allow-env=.env src/main.ts",
		"test": "deno test --allow-read=. --allow-env=.env --coverage",
		"fmt": "deno fmt src",
		"lint": "deno lint src"
	},
	"importMap": "./import_map.json",
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 2,
		"singleQuote": true,
		"proseWrap": "preserve"
	},
	"lint": {
		"rules": {
			"include": [
				"ban-untagged-todo",
				"require-await",
				"no-var",
				"prefer-const"
			],
			"exclude": [
				"no-explicit-any"
			]
		}
	},
	"lock": true
}
